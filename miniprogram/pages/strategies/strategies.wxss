.container {
  padding: 20px;
  min-height: 100vh;
  background-color: #f5f5f5;
}
.header {
  display: flex;
  align-items: center;
  position: relative;
  /* 相对定位 */
  justify-content: space-between;
  /* 改为两端对齐 */
  margin-bottom: 20px;
  height: 44px;
}
.header .back-btn {
  background-color: #4A90E2;
  color: white;
  border: none;
  border-radius: 4px;
  padding: 4px 8px;
  /* 进一步减小内边距 */
  margin-right: 12px;
  font-size: 18px;
  flex-shrink: 0;
  position: absolute;
  /* 绝对定位到左边 */
  min-width: auto;
  /* 移除最小宽度限制 */
  width: auto;
  /* 让按钮宽度自适应 */
  box-sizing: border-box;
  /* 确保padding不会增加总宽度 */
  z-index: 1;
  /* 确保按钮在标题上方 */
}
.header .title {
  font-size: 36px;
  font-weight: bold;
  color: #333;
  width: 100%;
  /* 占满整个header宽度 */
  text-align: center;
  /* 标题居中 */
  margin: 0;
  /* 为标题添加左右边距，避免与按钮重叠 */
}
.header .title-section {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.header .title-section .hero-name {
  font-size: 16px;
  font-weight: bold;
  color: #333;
  margin-bottom: 2px;
}
.header .title-section .map-name {
  font-size: 14px;
  color: #666;
  margin-bottom: 2px;
}
.header .title-section .tactic-name {
  font-size: 12px;
  color: #4A90E2;
  background-color: #e0f0ff;
  padding: 2px 8px;
  border-radius: 10px;
}
.points-section {
  background-color: white;
  border-radius: 8px;
  padding: 15px;
}
.points-section .points-list {
  height: 400px;
}
.points-section .point-item {
  padding: 15px;
  border-bottom: 1px solid #eee;
  cursor: pointer;
}
.points-section .point-item:last-child {
  border-bottom: none;
}
.points-section .point-item .point-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8px;
}
.points-section .point-item .point-header .point-title {
  font-size: 16px;
  font-weight: bold;
  color: #333;
}
.points-section .point-item .point-desc {
  font-size: 14px;
  color: #666;
  line-height: 1.4;
  margin-bottom: 10px;
}
.points-section .point-item .point-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 5px;
}
.points-section .point-item .point-tags .tag {
  font-size: 11px;
  color: #4A90E2;
  background-color: #e0f0ff;
  padding: 2px 6px;
  border-radius: 8px;
}
.points-section .empty-state {
  text-align: center;
  padding: 50px 0;
  color: #999;
  font-size: 16px;
}
