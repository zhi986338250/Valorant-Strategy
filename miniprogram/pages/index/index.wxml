<view class="container">
  <view class="welcome-section">
    <text class="welcome-title">Valorant Strategy</text>
    <text class="welcome-subtitle">选择地图</text>
  </view>
  
  <view class="maps-section">
    <text class="section-title">选择地图</text>
    <scroll-view class="maps-list" scroll-y="true">
      <view class="map-item" bindtap="selectMap" data-map-id="{{item.id}}" wx:for="{{maps}}" wx:key="id">
        <image class="map-image" src="{{item.image}}" mode="aspectFill"></image>
        <text class="map-name">{{item.name}}</text>
      </view>
    </scroll-view>
  </view>
</view>